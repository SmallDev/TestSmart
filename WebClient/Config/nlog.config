<?xml version="1.0" encoding="utf-8" ?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <variable name="projectName" value="SmartSpy" />
  <variable name="serverName" value="Development" />
  <variable name="ShortLayout" value="${longdate} ${logger} ${message}  ${onexception:${newline}EXCEPTION OCCURRED\:${newline}${exception:format=tostring}}"/>
  <targets>
    <target name="file"
				xsi:type="File"
				fileName="${basedir}/logs/log.log"
				archiveFileName="${basedir}/logs/log_${shortdate}_{#####}.log"
				layout="${ShortLayout}"
				concurrentWrites="true"
				archiveEvery="Day"
				archiveNumbering="Rolling"
				maxArchiveFiles="100" />

  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="file" />
  </rules>
</nlog>
